		        	<div class="form-group">
					    <input type="email" id="" class="form-control" placeholder="Email" required="">
				  	</div>
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-secondary btn1" data-dismiss="modal">Cancel</button>
			        <button type="button" class="btn btn-primary btn1">Submit</button>
			      </div>
		        </form>
		    </div>
		  </div>
		</div>

		<div class="modal fade mymodal" id="forgot-password" tabindex="-1" role="dialog" aria-labelledby="exampleModal3Label" aria-hidden="true">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		        <form class="form form1">
			      <div class="modal-header">
			        <h5 class="modal-title" id="exampleModal3Label">Forgot your Password</h5>
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
