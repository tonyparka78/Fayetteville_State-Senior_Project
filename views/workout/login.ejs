	<div class="margin-top"></div>

	<div class="login-section wrapper">
		<div class="container">
			<div class="login-box">
				<center><b>
						<% if(messages.success) { %>
							<p style="color:green"><%- messages.success %></p>
						<% } %>
					</b>
				</center>

				<h2>Login</h2>
				<p>Please enter username and password to login to your account</p>
				<form action="/login" method="post" class="form form1">
					<div class="form-group">
					    <input type="text" id="username" name="username" class="form-control" placeholder="Username" required="" >
					    <p class="info1 text-right"><a href="#" data-toggle="modal" data-target="#forgot-username">Forgot Username?</a></p>
				  	</div>

				  	<div class="form-group">
					    <input type="password" id="password" name="password" class="form-control" placeholder="Password" required="">
					    <p class="info1 text-right"><a href="#" data-toggle="modal" data-target="#forgot-password">Forgot Password?</a></p>
				  	</div>
					  <% if(messages.error) { %>
						<p style="color:red">The username or password not found</p>
					<% } %>
				  	<div>
				  		<button type="submit" class="btn btn1">Login</button>
				  	</div>
				</form>
			</div>

		</div>

		<!-- Modal -->
		<div class="modal fade mymodal" id="forgot-username" tabindex="-1" role="dialog" aria-labelledby="exampleModal3Label" aria-hidden="true">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		        <form class="form form1">
			      <div class="modal-header">
			        <h5 class="modal-title" id="exampleModal3Label">Forgot your Username</h5>
