	<div class="acount-section wrapper">
		<div class="container">
			<div class="row account-box justify-content-center">
				<div class="col-lg-8 col-md-10 col-sm-12">
					<h2 class="mb-4">Account</h2>
					<% if(messages.error) { %>
						<p style="color:red">The old password not correct</p>
					<% } %>
					<div class="row box">
						<div class="col-sm-3 left">
							<p>Username :</p>
						</div>
						<div class="col-sm-9 right">
							<div class="edit-user2">
								<p><%= data.username %></p>
								
							</div>
						</div>
					</div>
					<div class="row box">
						<div class="col-sm-3 left">
							<p>Email :</p>
						</div>
						<div class="col-sm-9 right">
							<div class="edit-user2">
								<p><%= data.email %><a href="#" class="icon" data-toggle="modal" data-target="#edit-email"><i class="fas fa-user-edit"></i></a></p>
								
							</div>
						</div>
					</div>
					<div class="row box">
						<div class="col-sm-3 left">
							<p>Password :</p>
						</div>
						<div class="col-sm-9 right">
							<div class="edit-user2">
								<p>********** <a href="#" class="icon" class="icon" data-toggle="modal" data-target="#edit-password"><i class="fas fa-user-edit"></i></a></p>
								
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>



		<!-- Modal -->
		<div class="modal fade mymodal" id="edit-email" tabindex="-1" role="dialog" aria-labelledby="exampleModal3Label" aria-hidden="true">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		        <form class="form form1" action="/account/email" method="post">
			      <div class="modal-header">
			        <h5 class="modal-title" id="exampleModal3Label">Update Email Address</h5>
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
			          <span aria-hidden="true">&times;</span>
			        </button>
			      </div>
			      <div class="modal-body">
			        <p>Please  enter your email address</p>
			        	<div class="form-group">
						    <input type="email" name="email" id="email" class="form-control" placeholder="Email" required="">
					  	</div>
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-secondary btn1" data-dismiss="modal">Cancel</button>
			        <input type="submit" class="btn btn-primary btn1" value="submit"/>
			      </div>
		        </form>
		    </div>
		  </div>
		</div>

		<div class="modal fade mymodal" id="edit-password" tabindex="-1" role="dialog" aria-labelledby="exampleModal3Label" aria-hidden="true">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
	    		<form class="form form1" action="/account/password" method="post">
			      <div class="modal-header">
			        <h5 class="modal-title" id="exampleModal3Label">Change Your Password</h5>
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
			          <span aria-hidden="true">&times;</span>
			        </button>
			      </div>
			      <div class="modal-body">
			        	<div class="form-group">
						    <input type="password" name="oldpassword" id="" class="form-control" placeholder="Old Password" required="">
					  	</div>
					  	<div class="form-group">
						    <input type="password" name="password" id="" class="form-control" placeholder="New Password" required="">
					  	</div>
					  	<div class="form-group">
						    <input type="password" id="" class="form-control" placeholder="Confirm Password" required="">
					  	</div>
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-secondary btn1" data-dismiss="modal">Close</button>
			        <input type="submit" class="btn btn-primary btn1" value="Submit"/>
			      </div>
			  	</form>	
		    </div>
		  </div>
		</div>

	</div>


