	<div class="Workout-section wrapper exercise tools">
		<div class="container">
			<div class="row Workout-box mt-0">
				<div class="col-lg-3 col-md-4 sidebar">
					<div class="sidebar-inner">
						<ul class="menu">
							<li><a href="/workout/exercise"><i class="fas fa-running"></i> Exercise</a></li>
							<li><a href="/workout/category"><i class="fas fa-sliders-h"></i> Category</a></li>
							<li><a href="/workout/routine"><i class="fas fa-calendar-alt"></i> Routine</a></li>
							<li><a href="/workout/tools" class="active"><i class="fas fa-wrench"></i> Tools</a></li>
						</ul>
					</div>
					
				</div>
				<div class="col-lg-9 col-md-8 content">
					<h2>Weight</h2>
					<div class="tool-inner">
						<div class="tab-menu">
							<ul class="nav nav-pills nav-fill">
							  <li class="nav-item">
							    <a class="nav-link" href="/workout/weight">New</a>
							  </li>
							  <li class="nav-item">
							    <a class="nav-link active disabled" href="/workout/history">History</a>
							  </li>
							  <li class="nav-item">
							    <a class="nav-link" href="/workout/graph">Graph</a>
							  </li>
							</ul>
						</div>

						<div class="tab-content">
								<% if(data) { %>
									<% data.forEach(function(history) { %>
							<div class="history-box">
								<div class="his1 d-flex justify-content-between">
									<div class="left">
										<p><%= history.Date %></p>
									</div>
									<div class="right">
										<p><%= history.time %> AM</p>
										<div class="icon">
											<div class="btn-group">
												<button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
												<span class="sr-only">Toggle Dropdown</span>
												</button>
												<div class="dropdown-menu">
													<a class="dropdown-item" href="#!">Edit Log</a>
													<div class="dropdown-divider"></div>
													<a class="dropdown-item" href="/workout/weight/delete/<%= history.id %>">Delete Log</a>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="his2 d-flex justify-content-between">
									<table class="table table-borderless">
										<tbody>
											<tr>
												<td><p><strong>Weight:</strong></p></td>
												<td><p><%= history.weight %> Kg</p></td>
											</tr>
											<tr>
												<td><p><strong>Notes:</strong></p></td>
												<td><p><%= history.Notes %></p></td>
											</tr>
										</tbody>
									</table>
								</div>

							</div>

							<% }) } %>
						</div>
					</div>
				</div>
			</div>

			
		</div>





